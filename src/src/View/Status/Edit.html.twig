{% include 'Header.html.twig' %}
{% include 'Menu.html.twig' %}
            
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form action="/status/edit/{{ status.id }}" method="POST">
            <div class="form-group{% if error is defined %} has-danger{% endif %}">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Status name" value="{{ status.name }}">
                {% if error is defined %}
                    <div class="form-control-feedback">{{ error }}</div>
                {% endif %}
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-primary" href="/status/list">Back</a>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

